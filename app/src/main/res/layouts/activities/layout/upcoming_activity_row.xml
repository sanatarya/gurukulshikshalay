<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTextWhite">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
        android:id="@+id/ll_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_view"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_15">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@mipmap/notification_activie"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 Sat"
        android:layout_below="@+id/ll_notification"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:textSize="@dimen/text_15"
        fontPath="@string/roboto_bold"
        tools:ignore="MissingPrefix"
        android:textColor="@color/colorTextPrimary"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_15"
        android:layout_marginStart="@dimen/text_15"
        android:layout_toEndOf="@+id/ll_notification"
        android:layout_toRightOf="@+id/ll_notification"
        android:layout_centerVertical="true"
        android:text="10:00am - 04:20pm"
        android:textSize="@dimen/text_11.8"
        fontPath="@string/roboto_regular"
        tools:ignore="MissingPrefix"
        android:id="@+id/tv_time" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_time"
        android:layout_marginLeft="@dimen/margin_10"
        android:textColor="@color/colorTextPrimary"
        fontPath="@string/roboto_medium"
        tools:ignore="MissingPrefix"
        android:text="Scool Plat Realsalkdk " />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/colorTextPrimary"/>

</RelativeLayout>
</LinearLayout>