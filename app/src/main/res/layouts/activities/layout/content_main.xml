<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.HomeScreenActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/toptoolbar"
                    layout="@layout/toolbar" />

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginTop="190dp"
                    android:background="@color/colorTextWhite"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/newsRl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_news"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/margin_10dp"
                                    android:background="@mipmap/news"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    fontPath="@string/roboto_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/iv_news"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="12dp"
                                    android:text="@string/text_news"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/text_13.3"
                                    tools:ignore="MissingPrefix" />

                                <LinearLayout
                                    android:layout_width="@dimen/margin_20"
                                    android:layout_height="@dimen/margin_20"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="@dimen/margin_20"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/circular_view"
                                    android:gravity="center"
                                    android:visibility="gone">

                                    <ImageView
                                        android:id="@+id/notification_news"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:background="@mipmap/notification_activie" />
                                </LinearLayout>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/galleryRl"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/syllabusIv"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/margin_10dp"
                                    android:background="@drawable/gallery"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    fontPath="@string/roboto_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/syllabusIv"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:text="@string/gallery"
                                    android:textColor="@color/colorTextPrimary"
                                    tools:ignore="MissingPrefix" />


                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/timetableRl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/timetableIv"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/margin_10dp"
                                    android:background="@drawable/timetable"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    fontPath="@string/roboto_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/timetableIv"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/margin_13"
                                    android:text="@string/text_timetable"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/text_13.3"
                                    tools:ignore="MissingPrefix" />


                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/eventsRl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_events"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/margin_10dp"
                                    android:background="@mipmap/events"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    fontPath="@string/roboto_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/iv_events"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:text="@string/text_events"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/text_13.3"
                                    tools:ignore="MissingPrefix" />

                                <LinearLayout
                                    android:layout_width="@dimen/margin_20"
                                    android:layout_height="@dimen/margin_20"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="@dimen/margin_20"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/circular_view"
                                    android:gravity="center"
                                    android:visibility="gone">

                                    <ImageView
                                        android:id="@+id/notification_events"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:background="@mipmap/notification_activie" />
                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/userImage"
                        android:layout_width="@dimen/margin_40"
                        android:layout_height="@dimen/margin_40"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginTop="80dp"
                        android:background="@drawable/logo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_reid"
                            fontPath="@string/roboto_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_20"
                            android:text="@string/app_registrationno"
                            android:textColor="@color/pinkcolor"
                            android:textSize="@dimen/text_11.8"
                            tools:ignore="MissingPrefix" />

                        <TextView
                            android:id="@+id/textView"
                            fontPath="@string/roboto_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/school_registration_no"
                            android:textColor="@color/colorTextWhite"
                            android:textSize="@dimen/text_11.8"
                            tools:ignore="MissingPrefix" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_schoolName"
                        fontPath="@string/roboto_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_reid"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginTop="@dimen/margin_5"
                        android:maxLines="2"
                        android:text="@string/school_name"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="@dimen/text_20"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        fontPath="@string/roboto_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:text="@string/short_address"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="@dimen/text_11.8"
                        tools:ignore="MissingPrefix" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_15">

                <include layout="@layout/common_recyclerview" />
            </LinearLayout>


            <TextView
                fontPath="@string/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_20"
                android:layout_marginTop="@dimen/margin_20"
                android:text="@string/text_upcominactivity"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_15"
                tools:ignore="MissingPrefix" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10" />

            <include layout="@layout/upcoming_activity_row" />

            <include layout="@layout/upcoming_activity_row" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>