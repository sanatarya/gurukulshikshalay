<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.HomeScreenActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/toptoolbar"
                    layout="@layout/toolbar" />

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginTop="190dp"
                    android:background="@color/colorTextWhite"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_7"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_7"
                            android:layout_weight=".29"
                            android:gravity="center"
                            android:orientation="vertical"></LinearLayout>

                        <LinearLayout
                            android:id="@+id/news_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_news"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:background="@mipmap/news" />

                                <TextView
                                    fontPath="@string/roboto_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/iv_news"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="12dp"
                                    android:text="@string/text_news"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/text_13.3"
                                    tools:ignore="MissingPrefix" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_15"
                                    android:background="@drawable/circular_view"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/notification_news"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@mipmap/notification_activie" />
                                </LinearLayout>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/events_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_events"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:background="@mipmap/events" />

                                <TextView
                                    fontPath="@string/roboto_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/iv_events"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:text="@string/text_events"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/text_13.3"
                                    tools:ignore="MissingPrefix" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_15"
                                    android:background="@drawable/circular_view"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/notification_events"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@mipmap/notification_activie" />
                                </LinearLayout>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_study"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_15"
                                    android:background="@mipmap/study" />

                                <TextView
                                    fontPath="@string/roboto_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/iv_study"
                                    android:layout_marginTop="@dimen/margin_13"
                                    android:text="@string/text_study"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/text_13.3"
                                    tools:ignore="MissingPrefix" />


                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/iv_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="13dp"
                                    android:background="@mipmap/profile" />

                                <TextView
                                    fontPath="@string/roboto_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/iv_profile"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:text="@string/text_profile"
                                    android:textColor="@color/colorTextPrimary"
                                    tools:ignore="MissingPrefix" />


                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_7"
                            android:layout_weight=".29"
                            android:gravity="center"
                            android:orientation="vertical"></LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <ImageView
                    android:id="@+id/userImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="80dp"
                    android:background="@mipmap/default_female_icon" />

                <TextView
                    fontPath="@string/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_reid"
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp"
                    android:layout_toRightOf="@+id/userImage"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/text_16.7"
                    tools:ignore="MissingPrefix"
                    tools:text="app_name" />

                <TextView
                    android:id="@+id/tv_reid"
                    fontPath="@string/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userImage"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="@string/app_registrationno"
                    android:textColor="@color/pinkcolor"
                    android:textSize="@dimen/text_11.8"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/textView"
                    fontPath="@string/roboto_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_reid"
                    android:layout_toRightOf="@+id/tv_reid"
                    android:text="  101061101056"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/text_11.8"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/tv_schoolName"
                    fontPath="@string/roboto_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_reid"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_5"
                    android:maxLines="2"
                    android:text="Bharti High school \nNawadih -1"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/text_20"
                    tools:ignore="MissingPrefix" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_15">

                <include layout="@layout/common_recyclerview" />
            </LinearLayout>


            <TextView
                fontPath="@string/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_20"
                android:layout_marginTop="@dimen/margin_20"
                android:text="@string/text_upcominactivity"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_15"
                tools:ignore="MissingPrefix" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10" />

            <include layout="@layout/upcoming_activity_row" />

            <include layout="@layout/upcoming_activity_row" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>